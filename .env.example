# PerFlexity Configuration
# Copy this file to .env and customize as needed

# =============================================================================
# Application Settings
# =============================================================================
APP_NAME=PerFlexity
APP_VERSION=1.0.0
DEBUG=false

# =============================================================================
# Server Configuration
# =============================================================================
HOST=127.0.0.1
PORT=8000

# =============================================================================
# Frontend Configuration
# =============================================================================
NEXT_PUBLIC_API_URL=http://localhost:8000

# =============================================================================
# Database Configuration
# =============================================================================
DATABASE_URL=sqlite+aiosqlite:///./perflexity.db

# =============================================================================
# Ollama Configuration
# =============================================================================
OLLAMA_BASE_URL=http://localhost:11434

# Main LLM model for chat responses
LLM_MODEL=qwen2.5:3b-instruct-q4_0
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=1024

# =============================================================================
# CVA (Claim Verification Analysis) Configuration
# =============================================================================
ENABLE_CVA_BY_DEFAULT=false
CVA_CLAIM_MODEL=qwen2.5:1.5b-instruct
CVA_TEMPERATURE=0.1
CVA_MAX_TOKENS=300
CVA_TIMEOUT_SECONDS=3

# =============================================================================
# Search Configuration
# =============================================================================
MAX_SEARCH_RESULTS=10
MAX_PASSAGES=20
SEARCH_TIMEOUT=10.0
FETCH_TIMEOUT=15.0

# SerpAPI key for premium search (optional)
SERPAPI_KEY=

# =============================================================================
# CORS Configuration
# =============================================================================
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =============================================================================
# Required Ollama Models (Auto-downloaded by setup script)
# =============================================================================
# 1. qwen2.5:3b-instruct-q4_0    (~1.7GB) - Main chat model
# 2. qwen2.5:1.5b-instruct       (~1.0GB) - CVA claim extraction  
# 3. nomic-embed-text:latest     (~274MB) - Text embeddings
#
# Total download: ~3GB (one-time setup)
